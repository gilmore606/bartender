<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView android:layout_width="80dp" android:layout_height="80dp"
               android:layout_marginVertical="2dp"
               android:id="@+id/item_drink_image" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_margin="12dp"
                  android:layout_weight="1" android:layout_gravity="center_vertical"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_margin="4dp"
                  android:id="@+id/item_drink_name"
                  style="@style/listBottle"
                  android:layout_gravity="center_vertical" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_margin="4dp" android:layout_gravity="center_vertical"
                  style="@style/bottleDrinkMissing"
                  android:id="@+id/item_drink_missing" />

    </LinearLayout>
    <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                                     android:id="@+id/item_drink_favorite_checkbox" android:layout_gravity="center_vertical|end"
                                     android:button="@drawable/checkbox_favorite"
                                     android:layout_margin="24dp" />
</LinearLayout>