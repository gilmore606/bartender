<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/bg_iconbar_lit"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/drinks_recycler"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:scrollbars="vertical" />

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/drinks_emptylayout" android:visibility="gone"
                  android:orientation="vertical" >
        <TextView android:layout_width="1dp" android:layout_height="1dp" android:layout_weight="0"
                  android:layout_marginRight="170dp"
                  android:layout_gravity="end"
                  android:id="@+id/drinks_empty_tipanchor" />
        <TextView android:id="@+id/bottles_emptytext_blank1"
                  android:layout_width="match_parent" android:layout_height="0dp"
                  android:text=""
                  android:layout_weight="0.4" />
        <TextView android:id="@+id/drinks_emptytext1"
                  android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:textAlignment="center" android:layout_weight="0"
                  android:gravity="center"
                  style="@style/helpText" android:layout_margin="24dp"
                  android:text=" " />
        <TextView android:id="@+id/drinks_emptytext2"
                  android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:textAlignment="center" android:layout_weight="0"
                  android:gravity="center"
                  style="@style/helpText" android:layout_margin="24dp"
                  android:text=" " />
        <TextView android:id="@+id/drinks_emptytext_blank2"
                  android:layout_width="match_parent" android:layout_height="0dp"
                  android:text=""
                  android:layout_weight="0.6" />
    </LinearLayout>

</LinearLayout>