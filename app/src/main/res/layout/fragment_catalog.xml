<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal" >

        <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/catalog_button_bottles"
                  android:layout_marginVertical="16dp" android:layout_marginHorizontal="10dp"
                  android:button="@drawable/checkbox_bottles" />
        <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/catalog_button_drinks"
                  android:layout_marginVertical="16dp" android:layout_marginHorizontal="10dp"
                  android:button="@drawable/checkbox_drinks" />

        <Spinner android:layout_width="0dp" android:layout_height="wrap_content"
                 android:layout_weight="1"
                android:id="@+id/catalog_bottles_spinner" android:visibility="gone"
                 android:background="@null" android:layout_gravity="center_vertical|end" />

        <Spinner android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:layout_weight="0" android:layout_marginHorizontal="16dp"
                 android:id="@+id/catalog_bottles_filter_spinner" android:visibility="gone"
                 android:background="@null" android:layout_gravity="center_vertical|end" />

        <Spinner android:layout_width="0dp" android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:id="@+id/catalog_drinks_spinner" android:visibility="gone"
                 android:background="@null" android:layout_gravity="center_vertical|end" />

        <Spinner android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:layout_weight="0" android:layout_marginHorizontal="16dp"
                 android:id="@+id/catalog_drinks_filter_spinner" android:visibility="gone"
                 android:background="@null" android:layout_gravity="center_vertical|end" />

    </LinearLayout>

    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
                 android:id="@+id/catalog_pane" />

</LinearLayout>