<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal" >

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="BOTTLES"
                android:id="@+id/catalog_button_bottles" />

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="DRINKS"
                android:id="@+id/catalog_button_drinks" />

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="MY BAR"
                android:visibility="gone" android:layout_gravity="right"
                android:id="@+id/catalog_button_bottles_mine" />
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="+ADD"
                android:visibility="gone" android:layout_gravity="right"
                android:id="@+id/catalog_button_bottles_add" />

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="ALL"
                android:visibility="gone" android:layout_gravity="right"
                android:id="@+id/catalog_button_drinks_all" />
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="FAVES"
                android:visibility="gone"
                android:layout_gravity="right"
                android:id="@+id/catalog_button_drinks_favorites" />

    </LinearLayout>

    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
                 android:id="@+id/catalog_pane" />

</LinearLayout>