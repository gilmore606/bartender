<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="ActionbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">#FEFEFE</item>
        <item name="android:background">@drawable/bg_actionbar</item>
    </style>

    <style name="tinyHeader">
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#55000000</item>
    </style>

    <style name="drinkTitle">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/slabo</item>
        <item name="android:textColor">@color/barBackDark</item>
    </style>
    <style name="ingredientAmount">
        <item name="android:fontFamily">@font/libre_baskerville</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="bodyCopy">
        <item name="android:fontFamily">@font/libre_baskerville</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#666666</item>
    </style>
    <style name="directions">
        <item name="android:fontFamily">@font/libre_baskerville</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
    </style>
    <style name="listBottle">
        <item name="android:fontFamily">@font/libre_baskerville</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="listBottleDrinkCount">
        <item name="android:fontFamily">@font/libre_baskerville</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#55000000</item>
    </style>
    <style name="bottleDrinkName">
        <item name="android:fontFamily">@font/libre_baskerville</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="bottleDrinkMissing">
        <item name="android:fontFamily">@font/libre_baskerville</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#AA000000</item>
    </style>
    <style name="checkLabel">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">#88000000</item>
    </style>
    <style name="loadingText">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#DDDDDD</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="DialogStyle" parent="android:Theme.Material.Light.Dialog.NoActionBar">
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>
